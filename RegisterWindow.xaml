<Window x:Class="test_avto.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test_avto"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="450" Width="400" MinHeight="450" MinWidth="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Surname"/>
            <TextBox Text="{Binding SotrudnikFamiliya}"/>
            <TextBlock Text="Name"/>
            <TextBox Text="{Binding SotrudnikImya}"/>
            <TextBlock Text="Patronymic"/>
            <TextBox Text="{Binding SotrudnikOtch}"/>
            <TextBlock Text="Login"/>
            <TextBox Text="{Binding SotrudnikLogin}"/>
            <TextBlock Text="Pass"/>
            <TextBox Text="{Binding SotrudnikPass}"/>

            <Button Content="Register" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
